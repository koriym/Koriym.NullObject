{
    "name": "koriym/null-object",
    "description": "Null object generator",
    "license": "MIT",
    "authors": [
        {
            "name": "Akihito Koriyama",
            "email": "akihito.koriyama@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.4",
        "phpunit/phpunit": "^9.5",
        "doctrine/annotations": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "Koriym\\NullObject\\": "src/"
        },
        "files": [
            "autoload.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Koriym\\NullObject\\": [
                "tests/",
                "tests/Fake"
            ]
        },
        "files": ["tests/Fake/FakeNoNsInterface.php"]
    },
    "scripts": {
        "test": "phpunit",
        "coverage": "php -dzend_extension=xdebug.so -dxdebug.mode=coverage ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage",
        "pcov": "php -dextension=pcov.so -d pcov.enabled=1 ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage  --coverage-clover=coverage.xml",
        "cs": "phpcs",
        "cs-fix": "phpcbf src tests",
        "metrics": "phpmetrics --report-html=build/metrics --exclude=Exception src",
        "clean": [
            "phpstan clear-result-cache",
            "psalm --clear-cache"
        ],
        "sa": [
            "psalm --show-info=true --monochrome",
            "phpstan analyse -c phpstan.neon"
        ],
        "tests": ["@cs", "@sa", "@test"],
        "build": ["@clean", "@cs", "@sa", "@pcov", "@metrics"]
    },
    "scripts-descriptions": {
        "test": "Run unit tests",
        "coverage": "Generate test coverage report",
        "pcov": "Generate test coverage report (pcov)",
        "cs": "Check the coding style",
        "cs-fix": "Fix the coding style",
        "clean": "Delete tmp files",
        "sa": "Run static analysis",
        "metrics": "Build metrics report",
        "tests": "Run tests and quality checks",
        "build": "Build project"
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        }
    },
    "extra": {
        "bamarni-bin": {
            "forward-command": true,
            "bin-links": true
        }
    }
}
